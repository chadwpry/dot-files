# .config

mkdir -p ~/.config

cp -r ~/dot-files./config/nvim ~/.config/nvim


# VIM

## LINKING

if [ ! -d "(realpath ~/.vim)" ]; then
	cp -r ~/dot-files/vim/.vim ~/.vim
fi

if [ ! -d "(realpath ~/.vimrc)" ]; then
	cp -r ~/dot-files/vim/.vimrc ~/.vimrc
fi

## INSTALLATION
~/dot-files/vim/install


# GIT

## INSTALLATION
cp ~/dot-files/nvim/.config ~/.config/nvim


# FZF

## INSTALLATION
git clone --depth 1 https://github.com/junegunn/fzf.git ~/.fzf
