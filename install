# .local

mkdir -p ~/.config

rm -rf ~/.config/nvim
rm -rf ~/.local/share/nvim
echo removed nvim hidden config and local directories

cp -r ./.config/nvim ~/.config/nvim
echo copied nvim config directory


# ZSH

## INSTALL

rm -rf ~/.oh-my-zsh
echo removed existing .oh-my-zsh directory

cp -r ./.oh-my-zsh ~/
echo copied .oh-my-zsh directory

cp ./.zshrc ~/
echo copied .zshrc configuration


# NVIM

## INSTALL

#rm -rf ~/.local/share/nvim

#git clone --depth 1 https://github.com/wbthomason/packer.nvim  ~/.local/share/nvim/site/pack/packer/start/packer.nvim


# GIT

## INSTALLATION
cp ./git/.gitconfig ~/.gitconfig
echo copied gitconfig


# TMUX/TMATE

## INSTALLATION
rm ~/.tmux.conf
cp .tmux.conf ~/.tmux.conf
rm ~/.tmate.conf
ln -s ~/.tmux.conf ~/.tmate.conf

echo removed and copied tmux and tmate configurations
