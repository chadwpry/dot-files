# VIM

## LINKING

if [ ! -d "(realpath ~/.vim)" ]; then
	cp -r ~/dot-files/vim/.vim ~/.vim
fi

if [ ! -d "(realpath ~/.vimrc)" ]; then
	cp -r ~/dot-files/vim/.vimrc ~/.vimrc
fi

## INSTALLATION
./vim/install


# NVIM

## INSTALLATION

echo
echo install nvim via brew or apt
echo

./nvim/install


# GIT

## INSTALLATION
cp ./git/.gitconfig ~/.gitconfig


# FZF

## INSTALLATION
git clone --depth 1 https://github.com/junegunn/fzf.git ~/.fzf
